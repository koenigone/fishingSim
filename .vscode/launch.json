{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch C++ in external terminal",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/fishingSim.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": true,
      "console": "externalTerminal",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb.exe",
      "preLaunchTask": "C/C++: g++.exe build active file",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}